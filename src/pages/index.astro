---
import Layout from "@/layouts/Layout.astro";

import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import Experience from "@/components/Experience.astro";
---

<Layout
  title="Porfolio de ricdevm - Desarrollador y Programador Web."
  description="Desarrollador Web. Especializado en ofrecer experiencias excepcionales a los usuarios."
>
  <main class="px-4">
	<SectionContainer class="py-16 md:py-36">
		<Hero>
			</slot>
	  	</Hero>
	</SectionContainer>

	<div class="space-y-24">
		<SectionContainer id="experiencia">
			<h2
			  class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white" 
			>
				<Briefcase class="size-8"/>
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2
			  class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white" 
			>
				Proyectos
		</SectionContainer>
	</div>
  </main>
</Layout>
